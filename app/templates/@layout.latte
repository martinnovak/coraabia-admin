<!DOCTYPE html>
<html lang="cs">
<head>
	<meta charset="utf-8">
	<meta name="description" content="Coraabia Admin Tools">
	<meta name="robots" content="noindex,nofollow">
	<meta name="googlebot" content="nosnippet,noarchive">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>{#title|striptags|upper}Coraabia Admin{/#}</title>

	<link rel="shortcut icon" href="{$basePath}/favicon.png">
	
	<link href="{$basePath}/css/bootstrap.min.css" rel="stylesheet" media="screen">
	<link href="{$basePath}/css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
	{#libStyles}
	<link href="{$basePath}/css/jquery-ui.min.css" rel="stylesheet" media="screen">
	<link href="{$basePath}/css/grido.css?3" rel="stylesheet" media="screen">
	{/#}
	<link href="{$basePath}/css/coraabia.css?5" rel="stylesheet" media="screen">
	{#serverStyles}
	{var $server = $locales->server ?: \Coraabia\ServerEnum::DEV}
	<link href="{$basePath}/css/server.{$server}.css" rel="stylesheet" media="screen">
	{/#}
	{#head}{/#}
</head>

<body>
	<script> document.documentElement.className+=' js' </script>

	{#header}
	<div id="header" class="container-fluid">
		<div class="row-fluid">
			{#menu}{control menu}{/#}
		</div>
	</div>
	{/#}
	
	{#main}
	<div id="main" class="container-fluid">
		<div class="row-fluid">
			<div class="span2">
				{control sidebar}
			</div>
			<div class="span10">
				<div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					{_$flash->message}
				</div>

				{include #content}
			</div>
		</div>
    </div>
	{/#}
	
	{#footer}
	<div id="footer" class="container-fluid">
		<div class="row-fluid">
			{control footer}
		</div>
	</div>
	{/#}

	{#scripts}
	<script type="text/javascript" src="{$basePath}/js/jquery.min.js"></script>
	<script type="text/javascript" src="{$basePath}/js/underscore.min.js"></script>
	<script type="text/javascript" src="{$basePath}/js/netteForms.js"></script>
	<script type="text/javascript" src="{$basePath}/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="{$basePath}/js/nette.ajax.js"></script>
	<script type="text/javascript" src="{$basePath}/js/nextras.netteForms.js"></script>
	{#libScripts}
	<script type="text/javascript" src="{$basePath}/js/bootstrap-typeahead.js"></script>
	<script type="text/javascript" src="{$basePath}/js/jquery.ba-hashchange.js"></script>
	<script type="text/javascript" src="{$basePath}/js/jquery.maskedinput.js"></script>
	<script type="text/javascript" src="{$basePath}/js/bootstrap-datepicker.js"></script>
	<script type="text/javascript" src="{$basePath}/js/jquery.grido.js"></script>
	{/#}
	{hook scripts}
	<script type="text/javascript" src="{$basePath}/js/main.js"></script>
	{/#}
</body>
</html>
